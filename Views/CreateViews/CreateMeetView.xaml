<UserControl x:Class="ZwembaadManager.Views.CreateMeetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZwembaadManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Custom ScrollBar Style -->
        <Style x:Key="CustomScrollBarThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="ThumbBorder"
                                CornerRadius="4"
                                Background="#00539F"
                                BorderThickness="1"
                                BorderBrush="#60FFFFFF">
                            <Border.Effect>
                                <DropShadowEffect Color="#4682B4" 
                                                  Direction="0" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.3" 
                                                  BlurRadius="6"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#5A9BD5"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#1E90FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomScrollBarPageButton" TargetType="RepeatButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border CornerRadius="6"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="1"
                                    BorderBrush="#30FFFFFF"
                                    Margin="2,0"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Margin="2,4">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource CustomScrollBarPageButton}"
                                                  Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource CustomScrollBarThumb}"
                                           Margin="1,0"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource CustomScrollBarPageButton}"
                                                  Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Style="{StaticResource CustomScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Margin="4,0,8,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Aero Glass Button Style -->
        <Style x:Key="AeroGlassButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#003366"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Effect>
                                <DropShadowEffect Color="#4682B4" 
                                                  Direction="270" 
                                                  ShadowDepth="1" 
                                                  Opacity="0.15" 
                                                  BlurRadius="4"/>
                            </Border.Effect>

                            <Grid>
                                <!-- Main Glass Surface -->
                                <Border x:Name="MainBorder"
                                        CornerRadius="6"
                                        BorderThickness="1"
                                        BorderBrush="#40FFFFFF"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F5FBFEFF" Offset="0"/>
                                            <GradientStop Color="#EAF4F9FF" Offset="0.5"/>
                                            <GradientStop Color="#E0EFF7FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>

                                    <!-- Subtle Glass Highlight -->
                                    <Border CornerRadius="5" 
                                            BorderThickness="0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.3">
                                                <GradientStop Color="#40FFFFFF" Offset="0"/>
                                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>

                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </Border>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FAFDFEFF" Offset="0"/>
                                            <GradientStop Color="#F0F8FCFF" Offset="0.5"/>
                                            <GradientStop Color="#E8F4FAFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#60FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="MainBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#E0EFF7FF" Offset="0"/>
                                            <GradientStop Color="#D5E9F4FF" Offset="0.5"/>
                                            <GradientStop Color="#CCE3F0FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Aero Action Button (More Prominent) -->
        <Style x:Key="AeroActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="22,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="DarkBlue"/>
            <Setter Property="BorderBrush" Value="DarkBlue"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Blue"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#003399"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button (Green) -->
        <Style x:Key="AeroSuccessButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="22,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="BorderBrush" Value="#27AE60"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2ECC71"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#B0C4DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4682B4"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#B0C4DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="toggleButton"
                                          Grid.Column="2"
                                          Background="White"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                  Margin="12,10"
                                                                  HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#4682B4"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#4682B4"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#1E90FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="12,10"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              IsHitTestVisible="False"/>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#4682B4"
                                        BorderThickness="2"
                                        CornerRadius="6"
                                        Margin="0,2,0,0">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#B0C4DE"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#87CEEB" Offset="0"/>
                <GradientStop Color="#4682B4" Offset="0.5"/>
                <GradientStop Color="#1E90FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Animated Water Waves Background -->
        <Viewbox Stretch="Fill" VerticalAlignment="Bottom">
            <Canvas Width="1200" Height="600" ClipToBounds="True">
                <Path Fill="#40FFFFFF" Opacity="0.3">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,300">
                                <BezierSegment Point1="100,250" Point2="200,350" Point3="300,300"/>
                                <BezierSegment Point1="400,250" Point2="500,350" Point3="600,300"/>
                                <BezierSegment Point1="700,250" Point2="800,350" Point3="900,300"/>
                                <BezierSegment Point1="1000,250" Point2="1100,350" Point3="1200,300"/>
                                <BezierSegment Point1="1300,250" Point2="1400,350" Point3="1500,300"/>
                                <LineSegment Point="1500,600"/>
                                <LineSegment Point="0,600"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <TranslateTransform x:Name="wave1Transform" X="0"/>
                    </Path.RenderTransform>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="wave1Transform"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-300"
                                                     Duration="0:0:8"
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>

                <Path Fill="#50FFFFFF" Opacity="0.25">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,320">
                                <BezierSegment Point1="125,270" Point2="250,370" Point3="375,320"/>
                                <BezierSegment Point1="500,270" Point2="625,370" Point3="750,320"/>
                                <BezierSegment Point1="875,270" Point2="1000,370" Point3="1125,320"/>
                                <BezierSegment Point1="1250,270" Point2="1375,370" Point3="1500,320"/>
                                <BezierSegment Point1="1625,270" Point2="1750,370" Point3="1875,320"/>
                                <BezierSegment Point1="2000,270" Point2="2125,370" Point3="2250,320"/>
                                <LineSegment Point="2250,600"/>
                                <LineSegment Point="0,600"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <TranslateTransform x:Name="wave2Transform" X="0"/>
                    </Path.RenderTransform>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="wave2Transform"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-375"
                                                     Duration="0:0:10"
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>

                <Path Fill="#60FFFFFF" Opacity="0.2">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,340">
                                <BezierSegment Point1="150,290" Point2="300,390" Point3="450,340"/>
                                <BezierSegment Point1="600,290" Point2="750,390" Point3="900,340"/>
                                <BezierSegment Point1="1050,290" Point2="1200,390" Point3="1350,340"/>
                                <BezierSegment Point1="1500,290" Point2="1650,390" Point3="1800,340"/>
                                <LineSegment Point="1800,600"/>
                                <LineSegment Point="0,600"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <TranslateTransform x:Name="wave3Transform" X="0"/>
                    </Path.RenderTransform>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="wave3Transform"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-450"
                                                     Duration="0:0:12"
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>
            </Canvas>
        </Viewbox>

        <!-- Content -->
        <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Margin="25,0">
            <StackPanel MaxWidth="750" HorizontalAlignment="Center">
                <!-- Header -->
                <Border Margin="0,25,0,30"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="DarkBlue">
                    <Border.Background>
                        <SolidColorBrush Color="White"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                    </Border.Effect>

                    <StackPanel Margin="35,20" HorizontalAlignment="Center">
                        <TextBlock FontSize="32" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4">
                            <Run Text="🏅" FontSize="36"/>
                            <Run Text="Create New Meet" Foreground="DarkBlue"/>
                        </TextBlock>
                        <TextBlock Text="Organize a new swimming meet event" 
                                   FontSize="15" 
                                   Foreground="#555"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Basic Information Section -->
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Margin="0,0,0,20"
                        Padding="40">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.95"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📋 Basic Information" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,25"/>

                        <!-- Meet Name -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Meet Name:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </Grid>

                        <!-- Date -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Date:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <DatePicker SelectedDate="{Binding Date}"
                                        Grid.Column="1" 
                                        Style="{StaticResource ModernDatePickerStyle}"/>
                        </Grid>

                        <!-- Part of Day -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Part of Day:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <ComboBox ItemsSource="{Binding PartsOfDay}"
                                      SelectedItem="{Binding PartOfTheDay}"
                                      Grid.Column="1" 
                                      Style="{StaticResource ModernComboBoxStyle}"/>
                        </Grid>

                        <!-- Meet State -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Meet State:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <ComboBox ItemsSource="{Binding MeetStates}"
                                      SelectedItem="{Binding MeetState}"
                                      Grid.Column="1" 
                                      Style="{StaticResource ModernComboBoxStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Venue Information Section -->
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Margin="0,0,0,20"
                        Padding="40">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.95"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="🏢 Venue Information" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,25"/>

                        <!-- Club Selection (WITH DROPDOWN) -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Club:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <Grid Grid.Column="1">
                                <ComboBox ItemsSource="{Binding AvailableClubs}"
                                          SelectedItem="{Binding SelectedClub}"
                                          Style="{StaticResource ModernComboBoxStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🏛️ " FontSize="14" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text=" (" Foreground="Gray" Margin="5,0,0,0"/>
                                                <TextBlock Text="{Binding Abbreviation}" Foreground="Gray"/>
                                                <TextBlock Text=")" Foreground="Gray"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <!-- Loading Indicator -->
                                <TextBlock Text="⏳ Loading clubs..." 
                                           Foreground="Gray"
                                           FontStyle="Italic"
                                           Margin="12,10"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsLoadingClubs, Converter={StaticResource BoolToVisConverter}}"/>
                            </Grid>
                        </Grid>

                        <!-- Swimming Pool Selection (WITH DROPDOWN) -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Swimming Pool:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <Grid Grid.Column="1">
                                <ComboBox ItemsSource="{Binding AvailableSwimmingPools}"
                                          SelectedItem="{Binding SelectedSwimmingPool}"
                                          Style="{StaticResource ModernComboBoxStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🏊 " FontSize="14" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text=" (" Foreground="Gray" Margin="5,0,0,0"/>
                                                <TextBlock Text="{Binding PoolLength}" Foreground="Gray"/>
                                                <TextBlock Text="m)" Foreground="Gray"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <!-- Loading Indicator -->
                                <TextBlock Text="⏳ Loading pools..." 
                                           Foreground="Gray"
                                           FontStyle="Italic"
                                           Margin="12,10"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsLoadingPools, Converter={StaticResource BoolToVisConverter}}"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Schedule & Registration Section -->
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Margin="0,0,0,20"
                        Padding="40">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.95"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="⏰ Schedule &amp; Registration" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,25"/>

                        <!-- Time Registration -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Time Registration:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <TextBox Text="{Binding TimeRegistration, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     ToolTip="e.g., 08:00-18:00"/>
                        </Grid>

                        <!-- Internships -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Internships:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <TextBox Text="{Binding NumberOfInternships, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </Grid>

                        <!-- Exams -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Exams:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"/>
                            <TextBox Text="{Binding NumberOfExams, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Additional Information Section -->
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Margin="0,0,0,20"
                        Padding="40">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.95"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📝 Additional Information" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,25"/>

                        <!-- Remarks -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Remarks:" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Top" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#003366"
                                       Margin="0,12,0,0"/>
                            <TextBox Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     Height="100"
                                     VerticalContentAlignment="Top"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Margin="0,0,0,25"
                        Padding="25">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.95"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>

                    <UniformGrid Columns="3" HorizontalAlignment="Center">
                        <Button Content="← Back to Dashboard" 
                                Command="{Binding BackToDashboardCommand}"
                                Style="{StaticResource AeroGlassButtonStyle}"
                                Width="180"
                                Height="50"/>

                        <Button Content="{Binding SaveButtonText}"
                                Command="{Binding SaveCommand}"
                                IsEnabled="{Binding IsNotSaving}"
                                Style="{StaticResource AeroSuccessButtonStyle}"
                                Width="180"
                                Height="50"/>

                        <Button Content="🔄 Clear Form" 
                                Command="{Binding ClearCommand}"
                                Style="{StaticResource AeroActionButtonStyle}"
                                Width="180"
                                Height="50"/>
                    </UniformGrid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>