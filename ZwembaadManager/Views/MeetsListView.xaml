<UserControl x:Class="ZwembaadManager.Views.MeetsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" Width="966">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Meetings Beheer" FontSize="24" FontWeight="Bold" Margin="10"/>

        <Button Grid.Row="1" Content="Meetings Laden" Command="{Binding LoadMeetsCommand}" 
                Width="150" Height="40" Margin="10" HorizontalAlignment="Left"/>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- ListBox -->
            <ListBox Grid.Column="0" ItemsSource="{Binding Meets}" 
                     SelectedItem="{Binding SelectedMeet}"
                     Margin="0,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding PartOfTheDay}" FontSize="11" Foreground="DarkGray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Details Panel -->
            <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Meeting Details" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Id, Mode=OneWay}" IsReadOnly="True" Margin="0,0,0,10"/>

                    <TextBlock Text="Naam" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Datum" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Date, StringFormat=yyyy-MM-dd, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Moment van de dag" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.PartOfTheDay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Status" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.MeetState, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Club ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.ClubId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Zwembad ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.SwimmingPoolId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Tijdregistratie" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.TimeRegistration, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Aantal Stages" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.NumberOfInternships, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Aantal Examens" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.NumberOfExams, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Opmerking" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Remarks, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" TextWrapping="Wrap" Height="60"/>

                    <TextBlock Text="Aangemaakt" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedMeet.CreatedDate, StringFormat=dd/MM/yyyy HH:mm}" Margin="0,0,0,10"/>

                    <TextBlock Text="Gewijzigd" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedMeet.ModifiedDate, StringFormat=dd/MM/yyyy HH:mm}" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Opslaan" Command="{Binding SaveMeetCommand}" 
                                Width="100" Height="35" Margin="0,0,10,0"/>
                        <Button Content="Verwijderen" Command="{Binding DeleteMeetCommand}" 
                                Width="100" Height="35" Background="#FFE74C3C"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <ProgressBar Grid.Row="3" IsIndeterminate="{Binding IsLoading}" Height="3"/>

        <Button Grid.Row="4" Content="Terug naar Dashboard" Click="BackToDashboard_Click" 
                Width="150" Height="35" Margin="10" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>