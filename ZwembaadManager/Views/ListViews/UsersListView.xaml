<UserControl x:Class="ZwembaadManager.Views.UsersListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" Width="966">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Gebruikers Beheer" FontSize="24" FontWeight="Bold" Margin="10"/>

        <Button Grid.Row="1" Content="Gebruikers Laden" Command="{Binding LoadUsersCommand}" 
                Width="150" Height="40" Margin="10" HorizontalAlignment="Left"/>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- ListBox -->
            <ListBox Grid.Column="0" ItemsSource="{Binding Users}" 
                     SelectedItem="{Binding SelectedUser}"
                     Margin="0,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="FirstName"/>
                                        <Binding Path="LastName"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding License}" FontSize="11" Foreground="DarkGray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Details Panel -->
            <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Gebruiker Details" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.Id, Mode=OneWay}" IsReadOnly="True" Margin="0,0,0,10"/>

                    <TextBlock Text="Voornaam" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Achternaam" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Email" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Mobiel" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.Mobile, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Licentie" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.License, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Land" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.County, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Club ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.ClubId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Actief" FontWeight="Bold"/>
                    <CheckBox IsChecked="{Binding SelectedUser.IsActive, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Keycloak Groepen" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.KeycloakGroups, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" TextWrapping="Wrap" Height="60" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Opslaan" Command="{Binding SaveUserCommand}" 
                                Width="100" Height="35" Margin="0,0,10,0"/>
                        <Button Content="Verwijderen" Command="{Binding DeleteUserCommand}" 
                                Width="100" Height="35" Background="#FFE74C3C"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <ProgressBar Grid.Row="3" IsIndeterminate="{Binding IsLoading}" Height="3"/>

        <Button Grid.Row="4" Content="Terug naar Dashboard" Click="BackToDashboard_Click" 
                Width="150" Height="35" Margin="10" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>