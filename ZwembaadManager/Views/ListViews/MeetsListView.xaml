<UserControl x:Class="ZwembaadManager.Views.MeetsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" Width="966">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Meetings Beheer" FontSize="24" FontWeight="Bold" Margin="10"/>

        <Button Grid.Row="1" Content="Meetings Laden" Command="{Binding LoadMeetsCommand}" 
                Width="150" Height="40" Margin="10" HorizontalAlignment="Left"/>

        <!-- Calendar Navigation -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="◄ Vorige" Command="{Binding PreviousMonthCommand}" 
                    Width="100" Height="35" Margin="0,0,10,0"/>
            
            <TextBlock Grid.Column="1" Text="{Binding CurrentMonthYear}" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <Button Grid.Column="2" Content="Volgende ►" Command="{Binding NextMonthCommand}" 
                    Width="100" Height="35" Margin="10,0,0,0"/>
        </Grid>

        <!-- Calendar Grid -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Calendar View -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Day Headers -->
                    <Grid Grid.Row="0" Background="#FF2C3E50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Ma" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                        <TextBlock Grid.Column="1" Text="Di" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                        <TextBlock Grid.Column="2" Text="Wo" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                        <TextBlock Grid.Column="3" Text="Do" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                        <TextBlock Grid.Column="4" Text="Vr" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                        <TextBlock Grid.Column="5" Text="Za" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                        <TextBlock Grid.Column="6" Text="Zo" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                    </Grid>

                    <!-- Calendar Days -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding CalendarDays}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7" Rows="6"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0.5" 
                                        Background="{Binding Background}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Day Number -->
                                        <TextBlock Grid.Row="0" Text="{Binding Day}" 
                                                   FontSize="10" Margin="2" 
                                                   Foreground="{Binding Foreground}"
                                                   HorizontalAlignment="Right"/>

                                        <!-- Events -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Meets}" 
                                                      Margin="2">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding Name}" 
                                                            Click="MeetButton_Click"
                                                            Tag="{Binding}"
                                                            Background="#FF3498DB" 
                                                            Foreground="White"
                                                            FontSize="9" 
                                                            Padding="2" 
                                                            Margin="0,1" 
                                                            BorderThickness="0"
                                                            HorizontalContentAlignment="Left"
                                                            ToolTip="{Binding Name}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FF2980B9"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Meeting Details" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Id, Mode=OneWay}" IsReadOnly="True" Margin="0,0,0,10"/>

                    <TextBlock Text="Naam" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Datum" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Date, StringFormat=yyyy-MM-dd, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Moment van de dag" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.PartOfTheDay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Status" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.MeetState, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Club ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.ClubId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Zwembad ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.SwimmingPoolId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Tijdregistratie" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.TimeRegistration, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Aantal Stages" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.NumberOfInternships, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Aantal Examens" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.NumberOfExams, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Opmerking" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedMeet.Remarks, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" TextWrapping="Wrap" Height="60"/>

                    <TextBlock Text="Aangemaakt" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedMeet.CreatedDate, StringFormat=dd/MM/yyyy HH:mm}" Margin="0,0,0,10"/>

                    <TextBlock Text="Gewijzigd" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedMeet.ModifiedDate, StringFormat=dd/MM/yyyy HH:mm}" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Opslaan" Command="{Binding SaveMeetCommand}" 
                                Width="100" Height="35" Margin="0,0,10,0"/>
                        <Button Content="Verwijderen" Command="{Binding DeleteMeetCommand}" 
                                Width="100" Height="35" Background="#FFE74C3C"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <ProgressBar Grid.Row="4" IsIndeterminate="{Binding IsLoading}" Height="3"/>

        <Button Grid.Row="5" Content="Terug naar Dashboard" Click="BackToDashboard_Click" 
                Width="150" Height="35" Margin="10" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>