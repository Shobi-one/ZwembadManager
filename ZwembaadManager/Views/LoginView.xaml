<UserControl x:Class="ZwembaadManager.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZwembaadManager.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="1"
                Background="White"
                BorderBrush="DarkBlue"
                BorderThickness="2"
                CornerRadius="10"
                Padding="40"
                MinWidth="350">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="🏊‍" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Zwembaad Manager"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="DarkBlue"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <Label Content="Gebruikersnaam:"
                           FontWeight="SemiBold"
                           Foreground="DarkBlue"
                           Padding="5,0,5,5"/>
                    <TextBox x:Name="txtUsername"
                             Height="35"
                             FontSize="14"
                             Padding="8"
                             BorderBrush="LightGray"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,25">
                    <Label Content="Wachtwoord:"
                           FontWeight="SemiBold"
                           Foreground="DarkBlue"
                           Padding="5,0,5,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 Height="35"
                                 FontSize="14"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"/>
                </StackPanel>

                <Button x:Name="btnLogin"
                        Content="Inloggen"
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="DarkBlue"
                        Foreground="White"
                        BorderBrush="DarkBlue"
                        Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Blue"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Text="© 2025 Zwembaad Manager"
                           FontSize="10"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightBlue" Offset="0"/>
                <GradientStop Color="LightCyan" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

    </Grid>
</UserControl>
