                        <TextBlock Text="🏊‍" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Zwembaad Manager"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <Label Content="Gebruikersnaam:"
                               FontWeight="SemiBold"
                               Foreground="DarkBlue"
                               Padding="5,0,5,5"/>
                        <TextBox x:Name="txtUsername"
                                 Height="35"
                                 FontSize="14"
                                 Padding="8"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,25">
                        <Label Content="Wachtwoord:"
                               FontWeight="SemiBold"
                               Foreground="DarkBlue"
                               Padding="5,0,5,5"/>
                        <PasswordBox x:Name="txtPassword"
                                     Height="35"
                                     FontSize="14"
                                     BorderBrush="LightGray"
                                     BorderThickness="1"/>
                    </StackPanel>

                    <Button Grid.Row="3"
                            x:Name="btnLogin"
                            Content="Inloggen"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="DarkBlue"
                            Foreground="White"
                            BorderBrush="DarkBlue"
                            Click="BtnLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Blue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Grid.Row="4"
                               Text="© 2025 Zwembaad Manager"
                               FontSize="10"
                               Foreground="LightGray"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>