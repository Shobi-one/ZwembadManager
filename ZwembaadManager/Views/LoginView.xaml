<UserControl x:Class="ZwembaadManager.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZwembaadManager.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Wave Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#87CEEB" Offset="0"/>
                <GradientStop Color="#4682B4" Offset="0.5"/>
                <GradientStop Color="#1E90FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Animated Wave Layers - Scaled to window -->
        <Viewbox Stretch="Fill" VerticalAlignment="Bottom">
            <Canvas Width="1200" Height="600" ClipToBounds="True">
                <!-- Wave 1 (Bottom) - Seamless Loop -->
                <Path Fill="#40FFFFFF" Opacity="0.3">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,300">
                                <BezierSegment Point1="100,250" Point2="200,350" Point3="300,300"/>
                                <BezierSegment Point1="400,250" Point2="500,350" Point3="600,300"/>
                                <BezierSegment Point1="700,250" Point2="800,350" Point3="900,300"/>
                                <BezierSegment Point1="1000,250" Point2="1100,350" Point3="1200,300"/>
                                <BezierSegment Point1="1300,250" Point2="1400,350" Point3="1500,300"/>
                                <LineSegment Point="1500,600"/>
                                <LineSegment Point="0,600"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <TranslateTransform x:Name="wave1Transform" X="0"/>
                    </Path.RenderTransform>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="wave1Transform"
                                                   Storyboard.TargetProperty="X"
                                                   From="0" To="-300"
                                                   Duration="0:0:8"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>

                <!-- Wave 2 (Middle) - Seamless Loop -->
                <Path Fill="#50FFFFFF" Opacity="0.25">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,320">
                                <BezierSegment Point1="125,270" Point2="250,370" Point3="375,320"/>
                                <BezierSegment Point1="500,270" Point2="625,370" Point3="750,320"/>
                                <BezierSegment Point1="875,270" Point2="1000,370" Point3="1125,320"/>
                                <BezierSegment Point1="1250,270" Point2="1375,370" Point3="1500,320"/>
                                <LineSegment Point="1500,600"/>
                                <LineSegment Point="0,600"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <TranslateTransform x:Name="wave2Transform" X="0"/>
                    </Path.RenderTransform>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="wave2Transform"
                                                   Storyboard.TargetProperty="X"
                                                   From="0" To="-375"
                                                   Duration="0:0:10"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>

                <!-- Wave 3 (Top) - Seamless Loop FIXED -->
                <Path Fill="#60FFFFFF" Opacity="0.2">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,340">
                                <BezierSegment Point1="150,290" Point2="300,390" Point3="450,340"/>
                                <BezierSegment Point1="600,290" Point2="750,390" Point3="900,340"/>
                                <BezierSegment Point1="1050,290" Point2="1200,390" Point3="1350,340"/>
                                <BezierSegment Point1="1500,290" Point2="1650,390" Point3="1800,340"/>
                                <BezierSegment Point1="1950,290" Point2="2100,390" Point3="2250,340"/>
                                <LineSegment Point="2250,600"/>
                                <LineSegment Point="0,600"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <TranslateTransform x:Name="wave3Transform" X="0"/>
                    </Path.RenderTransform>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="wave3Transform"
                                                   Storyboard.TargetProperty="X"
                                                   From="0" To="-450"
                                                   Duration="0:0:12"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>
            </Canvas>
        </Viewbox>

        <!-- Login Form - Centered and Responsive -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="1" Grid.Column="1"
                    Background="White"
                    BorderBrush="DarkBlue"
                    BorderThickness="2"
                    CornerRadius="10"
                    MinWidth="300"
                    MaxWidth="450"
                    Margin="20">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>

                <Grid Margin="40,30,40,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock Text="🏊‍" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Zwembaad Manager"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <Label Content="Gebruikersnaam:"
                               FontWeight="SemiBold"
                               Foreground="DarkBlue"
                               Padding="5,0,5,5"/>
                        <TextBox x:Name="txtUsername"
                                 Height="35"
                                 FontSize="14"
                                 Padding="8"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,25">
                        <Label Content="Wachtwoord:"
                               FontWeight="SemiBold"
                               Foreground="DarkBlue"
                               Padding="5,0,5,5"/>
                        <PasswordBox x:Name="txtPassword"
                                     Height="35"
                                     FontSize="14"
                                     BorderBrush="LightGray"
                                     BorderThickness="1"/>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button Grid.Row="3"
                            x:Name="btnLogin"
                            Content="Inloggen"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="DarkBlue"
                            Foreground="White"
                            BorderBrush="DarkBlue"
                            Click="BtnLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Blue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Footer -->
                    <TextBlock Grid.Row="4"
                               Text="© 2025 Zwembaad Manager"
                               FontSize="10"
                               Foreground="LightGray"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>