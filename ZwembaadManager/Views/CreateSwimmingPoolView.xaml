<UserControl x:Class="ZwembaadManager.Views.CreateSwimmingPoolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZwembaadManager.Views"
             mc:Ignorable="d" Width="800" Height="568">

    <Grid Margin="0,-28,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <TextBlock Text="Create New Swimming Pool" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="40" HorizontalAlignment="Center" MaxWidth="500">

                <GroupBox Header="Pool Information" Margin="0,0,0,20" Padding="20" Width="386">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Pool Name:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtName" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Pool Length (m):" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <ComboBox Name="cmbPoolLength" Grid.Column="1" Padding="8" FontSize="14" IsEditable="True">
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="33.3"/>
                                <ComboBoxItem Content="20"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Number of Lanes:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <ComboBox Name="cmbNumberOfLanes" Grid.Column="1" Padding="8" FontSize="14" IsEditable="True">
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                                <ComboBoxItem Content="8"/>
                                <ComboBoxItem Content="10"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Location Information" Margin="0,0,0,20" Padding="20" Width="386">
                    <StackPanel>
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Address ID:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtAddressId" Grid.Column="1" Padding="8" FontSize="14" 
                                     ToolTip="Reference to the address where this swimming pool is located"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Name="btnBackToDashboard" Content="Back to Dashboard" Width="140" Height="40" Margin="10" 
                    FontWeight="Bold" Click="BtnBackToDashboard_Click"/>
            <Button Name="btnSave" Content="Save Swimming Pool" Width="140" Height="40" Margin="10" 
                    FontWeight="Bold" Click="BtnSave_Click"/>
            <Button Name="btnClear" Content="Clear Form" Width="140" Height="40" Margin="10" 
                    FontWeight="Bold" Click="BtnClear_Click"/>
        </StackPanel>
    </Grid>
</UserControl>