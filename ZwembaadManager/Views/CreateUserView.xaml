<UserControl x:Class="ZwembaadManager.Views.CreateUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZwembaadManager.Views"
             mc:Ignorable="d" Width="800" Height="694">

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <TextBlock Text="Create New User" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="40" HorizontalAlignment="Center" MaxWidth="500">

                <GroupBox Header="Personal Information" Margin="0,0,0,20" Padding="20" Width="386">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="First Name:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtFirstName" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Last Name:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtLastName" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Email:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtEmail" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gender:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <ComboBox Name="cmbGender" Grid.Column="1" Padding="8" FontSize="14" DisplayMemberPath="DisplayName" SelectedValuePath="Value"/>
                        </Grid>

                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mobile:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtMobile" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Club Information" Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Club ID:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtClubId" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="License:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtLicense" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="County:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox Name="txtCounty" Grid.Column="1" Padding="8" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Name="btnBackToDashboard" Content="Back to Dashboard" Width="140" Height="40" Margin="10" 
                    FontWeight="Bold" Click="BtnBackToDashboard_Click"/>
            <Button Name="btnSave" Content="Save User" Width="140" Height="40" Margin="10" 
                    FontWeight="Bold" Click="BtnSave_Click"/>
            <Button Name="btnClear" Content="Clear Form" Width="140" Height="40" Margin="10" 
                    FontWeight="Bold" Click="BtnClear_Click"/>
        </StackPanel>
    </Grid>
</UserControl>